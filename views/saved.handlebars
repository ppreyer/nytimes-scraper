</nav>

<div class="col-md-12">
{{!--    <div class="jumbotron">
     <div class="jumbotext">
      <h1>hello</h1>
     </div>
  </div> --}}
    {{#if articles}}
      {{#each articles}}
          <div class="panel panel-primary">
          <div class="panel-heading">
              <h3 class="panel-title" id="{{this._id}}">{{this.title}}</h3>
          </div>
          <div class="panel-body">
              {{#if this.image}}
                    <img src="{{this.image}}" />
                    <br><br>
                {{/if}}
                <a href="{{this.link}}" target="_blank"> Link: {{this.link}} </a>
                <br><br>
                {{#if this.summary}}
                    Summary: {{this.summary}}
                {{/if}}
              <button type="submit" class="btn btn-success comment" data-toggle="modal" id="{{this._id}}" data-target="#myModal">Add Comments</button>
              {{!-- <button class= "btn btn-success comment" type="submit" id="{{this._id}}">Add Comments</button> --}}
              <button class= "btn btn-danger unsave" type="submit" id="{{this._id}}">Unsave Article</button>
          </div>
          </div>
      {{/each}}
    {{else}}
      <div class="panel panel-default">
            <div class="panel-body">
            <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
            </div>
         </div>
    {{/if}}
</div>

      <!-- Trigger the modal with a button -->
{{!-- <button type="button" class="btn btn-suucess comment" data-toggle="modal" data-target="#myModal">Open Modal</button>
 --}}
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label for="exampleTextarea">Enter a Comment Below:</label>
            <textarea id="addnote" rows="3"></textarea>
        </div>
        <div id="notesection">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success addnote">Add Comment</button> 
      </div>
    </div>

  </div>
</div>


